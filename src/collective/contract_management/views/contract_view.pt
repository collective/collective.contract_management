<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="collective.contract_management"
      metal:use-macro="context/main_template/macros/master">

<metal:style_slot fill-slot="style_slot">
    <link rel="stylesheet" type="text/css"
      href="++plone++collective.contract_management/main.min.css" />
</metal:style_slot>

<body>

<metal:block fill-slot="content-core">
  <section class="table">
    <header>
      <div i18n:translate="">Contract begin</div>
      <div i18n:translate="">Contract end</div>
      <div i18n:translate="">Notice period</div>
      <div i18n:translate="">Reminder</div>
      <div i18n:translate="">Renewal period</div>
    </header>
    <article>
      <div tal:content="python:here.toLocalizedTime(view.context.start)"></div>
      <div tal:content="python:here.toLocalizedTime(view.context.end)"></div>
      <div tal:content="structure view/context/notice_period"></div>
      <div>
        <span tal:content="structure view/context/reminder" /> <span i18n:translate="">beforehand</span>
      </div>
      <div tal:content="structure view/context/renewal_period"></div>
    </article>
  </section>

    <header i18n:translate="">attachments</header>
    <ul class="attachments">
      <li tal:repeat="item context/@@contentlisting"><img class="icon" tal:condition="item/MimeTypeIcon|nothing" tal:attributes="src item/MimeTypeIcon" /><a tal:attributes="href string:${item/getURL}" tal:content="item/Title"></a></li>
    </ul>


</metal:block>
</body>
</html>
